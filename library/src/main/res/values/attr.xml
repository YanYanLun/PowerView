<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="PowerView">
        <attr name="powerColor" format="color|reference"></attr>
        <attr name="bgColor" format="color|reference"></attr>
        <attr name="powerProgress" format="integer"></attr>
        <attr name="orientation" >
            <flag name = "vertical" value = "0" />
            <flag name = "horizontal" value = "1" />
        </attr>
    </declare-styleable>
</resources>